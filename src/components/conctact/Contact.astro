---
import Social from './Social.astro'
import { socials } from './config.js'
---

<div class='bg-white text-dark pt-[5vw] px-[5vw] pb-[15vh] h-fit'>
  <h3 class='text-5xl sm:text-6xl md:text-7xl font-extrabold duration-300'>Contactame</h3>
  <p class='text-2xl pt-[1vh] md:text-4xl font-light duration-300'>Tienes alguna pregunta contactame:</p>
  <div class='mt-[6vh] grid gap-12 grid-cols-1 lg:grid-cols-2'>
    <Social socials={socials} />
  </div>
</div>
