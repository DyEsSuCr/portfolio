---
const { socials } = Astro.props
---

{
  socials.map((social) => (
    <a href={social.url} target='_blank'>
      <div class='flex items-center flex-col md:flex-row p-6 duration-300 bg-transparent rounded-2xl hover:scale-105 hover:duration-300 hover:bg-grayy hover:text-white'>
        <div set:html={social.icons} />
        <div class='text-center md:text-left'>
          <p class='uppercase text-2xl font-extrabold md:text-3xl'>{social.title}</p>
          <p class='text-2xl font-normal md:text-3xl'>{social.detail}</p>
        </div>
      </div>
    </a>
  ))
}
